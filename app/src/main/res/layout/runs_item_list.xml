<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutrunslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default">

        <TextView
            android:id="@+id/txt_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            tools:text="ID" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/txt_id"
            app:layout_constraintLeft_toRightOf="@+id/txt_id"
            app:layout_constraintTop_toTopOf="@+id/txt_id"
            tools:text="Data" />


        <TextView
            android:id="@+id/txt_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_date"
            app:layout_constraintLeft_toRightOf="@+id/txt_date"
            app:layout_constraintTop_toTopOf="@+id/txt_date"
            tools:text="Valor Total" />

        <TextView
            android:id="@+id/txt_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_value"
            app:layout_constraintLeft_toRightOf="@+id/txt_value"
            app:layout_constraintTop_toTopOf="@+id/txt_value"
            tools:text="Pagamento" />

        <ImageView
            android:id="@+id/img_selectrunlist"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/select"
            app:srcCompat="@drawable/ic_check"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/txt_bonus"
            app:layout_constraintLeft_toRightOf="@+id/txt_bonus"
            app:layout_constraintTop_toTopOf="@+id/txt_bonus"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>