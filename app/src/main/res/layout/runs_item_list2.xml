<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_list_runs">

    <LinearLayout
        android:id="@+id/linearlayoutrunslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default">



        <TextView
            android:id="@+id/txt_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            tools:text="ID" />

        <TextView
            android:id="@+id/txt_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            tools:text="Data" />


        <TextView
            android:id="@+id/txt_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            tools:text="Valor Total" />

        <TextView
            android:id="@+id/txt_bonus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            tools:text="Pagamento" />

        <ImageView
            android:id="@+id/img_selectrunlist"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/select"
            app:srcCompat="@drawable/ic_check"
            android:layout_marginStart="@dimen/margin_default"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>